{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2016", "es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@ui/*": ["src/ui/*"],
      "@views/*": ["src/views/*"],
      "@queries/*": ["src/queries/*"],

      "@store": ["src/state/index"],
      "@store/*": ["src/state/*"],

      "notify": ["src/app/notify.tsx"],

      "locales": ["src/app/locales"],
      "locales/*": ["src/app/locales/*"],

      "socket-io": ["src/lib/socket-io"],
      "client": ["src/lib/apollo/index.ts"],
      "fluent": ["src/lib/cerebral/fluent.ts"],
      "embed-api": ["src/lib/embed-api"]
    },
    "plugins": [
      {
        "name": "ts-graphql-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
